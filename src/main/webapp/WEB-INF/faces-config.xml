<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.logIn()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.logIn()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{signUpBean.signUp()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/firstsignup.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{signUpBean.signUp()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/resources.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{resourceBean.saveResource()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/resources.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{resourceBean.viewResource()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/resourceView.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/dashboard.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{testBean.subject()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/subject.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-action>#{SubjectBean.becomeTutor()}
            </from-action>
            <from-outcome>success</from-outcome>
           
            <to-view-id>/subject-truknow.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>

</faces-config>
